
import tweepy #https://github.com/tweepy/tweepy
import json

#Import the necessary methods from tweepy library
from tweepy.streaming import StreamListener
from tweepy import OAuthHandler
from tweepy import Stream

#Twitter API credentials
consumer_key = ""
consumer_secret = ""
access_key = ""
access_secret = ""


#This is a basic listener that just prints received tweets to stdout and saves 
#stuff in json file
class StdOutListener(StreamListener):

    
    def on_data(self, data):
    
        data2 = []
        
        data2.append(json.loads(data)['text'])
        data2.append(json.loads(data)['created_at'])
        #tweet id
        data2.append(json.loads(data)['id'])
        #comment tweet
        data2.append(json.loads(data)['in_reply_to_status_id'])
        #I can't get location to work. program will crash every time i try to 
        #add it. I have checked the spelling. 
        #data2.append(json.loads(data)['location'])
        
        #retweet - same here. code crashes. "KeyError"
        #data2.append(json.loads(data)['quoted_status_id'])
       
        with open('C:\\Users\\Tiina\\Desktop\\GRADU\\data.json', 'a') as outfile:
            json.dump(data2, outfile)
        
        print(data)
        
        return True

    def on_error(self, status):
        print(status)


if __name__ == '__main__':

    #This handles Twitter authetification and the connection to Twitter Streaming API
    l = StdOutListener()
    auth = OAuthHandler(consumer_key, consumer_secret)
    auth.set_access_token(access_key, access_secret)
    stream = Stream(auth, l)

    #This line filter Twitter Streams to capture data by the keywords: 'python', 'javascript', 'ruby'
    stream.filter(track=['realDonaldTrump'])
